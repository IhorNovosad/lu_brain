// API

	void lu_block_begin(Story story)
	{
		lu_user_assert_void(story, "Story is NULL");
		//lu_debug("\nlu_block_begin");
		story->start_block_on_next_data = true;
	}

	void lu_block_end(Story story)
	{
		lu_user_assert_void(story, "Story is NULL");
		//lu_debug("\nlu_block_end");
		story->start_block_on_next_data = true;
	}

