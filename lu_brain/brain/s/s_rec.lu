	static S_Rec s_rec_create(S_Mem s_mem, Lu_Rec rec)
	{
		lu_user_assert(s_mem, "S_Mem is NULL");
		lu_user_assert(s_mem->brain, "s_mem->brain is NULL");
		lu_user_assert(rec, "Rec is NULL");
		lu_user_assert(rec->v_max > rec->v_min, "Lu_Rec v_max should be greater than Lu_Rec v_min");
		lu_user_assert(rec->p_nsc >= 0 && rec->p_nsc <= rec->p_neu_size, "Lu_Rec val_nsc should be greater than 0 and less equal to 0.5");
		lu_user_assert(rec->width > 0, "Lu_Rec width should be greater than 0");
		lu_user_assert(rec->height > 0, "Lu_Rec height should be greater than 0");

		Mem mem = s_mem->brain->mem_perm;

		lu_user_assert(mem, "Mem is NULL");

		S_Rec self = (S_Rec) mem_alloc(mem, sizeof(struct s_rec));
		lu_user_assert(self, "Cannot allocate S_Rec");

		self->mem				= s_mem;
		self->rec 				= rec;
		self->id 				= rec->id;

		s_col_conf_init(&self->v_conf, mem, rec->component_size, rec->v_min, rec->v_max, rec->v_neu_size, rec->v_nsc);
		s_col_conf_init(&self->p_conf, mem, rec->component_size, rec->v_min, rec->v_max, rec->p_neu_size, rec->p_nsc);

		self->cells_w 			= rec->width;
		self->cells_h			= rec->height; 
		self->cells_size 		= self->cells_w * self->cells_h * 2;  
		self->cells_count 		= 0;

		self->cells = (S_Cell*) mem_alloc(mem, sizeof(S_Cell) * self->cells_size);
		lu_user_assert(self->cells, "Cannot allocate cells");

		self->layers_size = self->cells_w > self->cells_h ? self->cells_w : self->cells_h;

		self->v_layers = (S_Layer*) mem_alloc(mem, sizeof(S_Layer) * self->layers_size);
		lu_user_assert(self->v_layers, "Cannot allocate v layers"); 

		self->p_layers = (S_Layer*) mem_alloc(mem, sizeof(S_Layer) * self->layers_size);
		lu_user_assert(self->v_layers, "Cannot allocate p layers");


		///////////////////////////////////////
		// Cells

		S_Layer v_layer;
		S_Layer p_layer;

		v_layer = s_layer_create(self, mem, SLT_V, 0, self->cells_w, self->cells_h);
		lu_user_assert(v_layer, "Cannot create S_Layer");
		self->v_layers[0] = v_layer;

		p_layer = s_layer_create(self, mem, SLT_P, 0, self->cells_w, self->cells_h);
		lu_user_assert(p_layer, "Cannot create S_Layer");
		self->p_layers[0] = p_layer;

		lu_size x;
		lu_size y;
		S_Cell v_cell;
		S_Cell p_cell;
		lu_size w;
		lu_size h;
		w = v_layer->w;
		h = v_layer->h;

		for (y = 0; y < h; y++)
			for (x = 0; x < w; x++)
			{
				v_cell = s_rec_cell_create(self, mem, v_layer, &self->v_conf, x, y);
				p_cell = s_rec_cell_create(self, mem, p_layer, &self->p_conf, x, y);

				v_cell->t = p_cell;
				p_cell->t = v_cell;
			}

		///////////////////////////////////////
		// Neus

		w = self->cells_w - 1;
		h = self->cells_h - 1;

		self->neus_size = 0;

		while (w > 0 && h > 0)
		{
			self->neus_size += w * h;
			if (w > 0) --w;
			if (h > 0) --h;
		}

		self->neus_size *= 2;
		self->neus = (S_Neu*) mem_alloc(mem, sizeof(S_Neu) * self->neus_size);
		lu_user_assert(self->neus, "Cannot allocate neus");

		//lu_debug("\n NS w = %d, h = %d, ns= %d", self->cells_w, self->cells_h, self->neus_size);

		w = self->cells_w - 1;
		h = self->cells_h - 1;
		lu_size layer_ix = 1;
		S_Neu v_neu;
		S_Neu p_neu;

		while (w > 0 && h > 0)
		{
			if (w > 0) --w;
			if (h > 0) --h;

			self->v_layers[layer_ix] = s_layer_create(self, mem, SLT_V, layer_ix, self->cells_w, self->cells_h);
			lu_user_assert(self->v_layers[layer_ix], "Cannot create S_Layer");

			self->p_layers[layer_ix] = s_layer_create(self, mem, SLT_P, layer_ix, self->cells_w, self->cells_h);
			lu_user_assert(self->p_layers[layer_ix], "Cannot create S_Layer");

			v_layer = self->v_layers[layer_ix];
			p_layer = self->p_layers[layer_ix];

			for (y = 0; y < h; y++)
				for (x = 0; x < w; x++)
				{
					v_neu = s_rec_neu_create(self, mem, v_layer, x, y); 
					s_neu_p_connect(v_neu, self->v_layers);

					p_neu = s_rec_neu_create(self, mem, p_layer, x, y);  	
					s_neu_p_connect(p_neu, self->p_layers);

					v_neu->t = p_neu;
					p_neu->t = v_neu;
				}

			++layer_ix; 
		} 

		return self;
	}

	static S_Cell s_rec_cell_create(S_Rec self, Mem mem, S_Layer layer, S_Col_Conf conf, lu_size x, lu_size y)
	{
		S_Cell cell = s_cell_create(mem, layer, conf, x, y);
		lu_user_assert(cell, "Cannot allocate cell");
		
		self->cells[self->cells_count] = cell;

		s_layer_neu_ix_set(layer, x, y, self->cells_count);

		++self->cells_count;

		return cell;
	}

	static S_Neu s_rec_neu_create(S_Rec self, Mem mem, S_Layer layer, lu_size x, lu_size y)
	{
		S_Neu neu = s_neu_create(mem, layer, x, y);
		lu_user_assert(neu, "Cannot create S_Neu");
		self->neus[self->neu_count] = neu;

		s_layer_neu_ix_set(layer, x, y, self->neu_count);

		++self->neu_count;

		return neu;
	}