///////////////////////////////////////////////////////////////////////////////
// Init, create and destroy

	Receiver rec_create(Brain brain, Rec_Opts opts)
	{
		Receiver self 			= (Receiver) malloc(sizeof(struct receiver));

		// Initialize
		self->brain 			= brain;

		return self;
	}

	void rec_destroy(Receiver* self)
	{
		lu_free((void**) self);
	}

