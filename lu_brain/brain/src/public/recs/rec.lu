///////////////////////////////////////////////////////////////////////////////
// Init, create and destroy

	Rec rec_create(Brain brain, Rec_Opts opts)
	{
		Rec self 			= (Rec) mem_temp_alloc(sizeof(struct rec));

		// Initialize
		self->brain 		= brain;

		return self;
	}

	void rec_destroy(Rec self)
	{
		mem_temp_free((lu_p_byte) self);
	}

