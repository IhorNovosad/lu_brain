// Create and destroy

	Story story_create(Brain brain)
	{
		Story self 		= (Story) mem_alloc(g_mem_temp, sizeof(struct story));

		// Initialize
		self->brain 	= brain;

		return self;
	}

	void story_destroy(Story self)
	{
		mem_free(g_mem_temp, (lu_p_byte) self);
	}

