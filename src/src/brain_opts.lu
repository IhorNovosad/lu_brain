///////////////////////////////////////////////////////////////////////////////
// Init, create and destroy

	Brain_Opts brain_opts_create(lu_size id, lu_size size_in_bytes)
	{
		Mem mem 					= mem_create();
		Brain_Opts self 			= (Brain_Opts) mem_alloc(mem, sizeof(struct brain_opts));

		// Initialize
		self->id					= id;
		self->size_in_bytes			= size_in_bytes;
		self->save_waves_size 		= 1;
		self->find_waves_size		= 1;
		self->restore_waves_size	= 1;

		self->rec_opts				= arr_create(10);
		self->mem 					= mem;

		return self;
	}

	void brain_opts_destroy(Brain_Opts self)
	{
		mem_free(self->mem, (lu_p_byte) self);
	}


